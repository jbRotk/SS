<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Android="http://schemas.android.com/apk/res-auto"
    package="com.example.brazz.mediapaly_test">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".Application.application"
        android:allowBackup="true"
        android:icon="@drawable/label"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activity.MainMp3">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.mp3_play"
            android:theme="@style/BlackAppTheme" />

        <service
            android:name=".Control.data.Service.DownLoadService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".Control.data.Service.Mp3Play_Service"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".Activity.LocalMp3" />
        <activity android:name=".Activity.SearchMp3" />
        <activity android:name=".Activity.DownloadMp3" />
        <activity android:name=".Activity.Musiclibrary" />
        <activity android:name=".Activity.RectenPlay" />
        <activity
            android:name=".Activity.LockScreen"
            android:exported="false"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:taskAffinity="com.package.name.lockscreen"
            android:theme="@style/LockScreenBase" />

        <receiver
            android:name=".Control.data.BroadcastReceiVer.LockScreenReciver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".Activity.Register"></activity>
    </application>

</manifest>
